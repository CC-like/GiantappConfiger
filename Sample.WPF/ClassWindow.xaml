<Window
    x:Class="Sample.WPF.ClassWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:giantappconfiger="clr-namespace:GiantappConfiger;assembly=GiantappConfiger"
    xmlns:local="clr-namespace:Sample.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ClassWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <giantappconfiger:ConfigControl x:Name="configer" />
        <Button Grid.Row="1" Click="Button_Click">Save</Button>
    </Grid>
</Window>
